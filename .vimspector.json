{
  "configurations": {
    "<name>: Launch": {
      "adapter": "debugpy",
      "filetypes": [ "python" ],
      "configuration": {
        "name": "<name>: Launch",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceRoot}",
        "python": "${workspaceRoot}/venv/bin/python",
        "stopOnEntry": true,
        "console": "externalTerminal",
        "debugOptions": [],
        "program": "${file}"
      },
      "breakpoints": {
        "exception": {
          "raised": "Y",
          "uncaught": "Y",
          "userUnhandled": ""
        }
      }
    }
  }
}
